<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConeCalculator.ConeArea">

    <TextView
        android:id="@+id/txtCoACalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Cone Area Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCoARadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="Radius"
        app:layout_constraintStart_toStartOf="@+id/inputCoARadius"
        app:layout_constraintTop_toBottomOf="@+id/txtCoACalculator" />

    <EditText
        android:id="@+id/inputCoARadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txtCoACalculator"
        app:layout_constraintStart_toStartOf="@+id/txtCoACalculator"
        app:layout_constraintTop_toBottomOf="@+id/txtCoACalculator"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtCoAHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Height"
        app:layout_constraintStart_toStartOf="@+id/inputCoAHeight"
        app:layout_constraintTop_toBottomOf="@+id/inputCoARadius" />

    <EditText
        android:id="@+id/inputCoAHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/inputCoARadius"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputCoARadius"
        app:layout_constraintTop_toBottomOf="@+id/inputCoARadius"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtCoAAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Cone Area:"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/inputCoAHeight"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/inputCoAHeight"
        app:layout_constraintTop_toBottomOf="@+id/inputCoAHeight" />

    <Button
        android:id="@+id/btnCoACalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFC107"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/txtCoAAnswer"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/txtCoAAnswer"
        app:layout_constraintTop_toBottomOf="@+id/txtCoAAnswer" />

    <Button
        android:id="@+id/btnCoABack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF0000"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/btnCoACalculate"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/btnCoACalculate"
        app:layout_constraintTop_toBottomOf="@+id/btnCoACalculate" />

</androidx.constraintlayout.widget.ConstraintLayout>